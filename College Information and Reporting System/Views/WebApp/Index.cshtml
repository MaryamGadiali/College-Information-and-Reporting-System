@using College_Information_and_Reporting_System.Models
@using College_Information_and_Reporting_System.Models.ViewModels
@model IndexViewModel

<!DOCTYPE HTML>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/styles.css" />
    <title>Students page</title>

    <script>
        function searchFunction(searchString) {
                           var studentItems = document.querySelectorAll('.studentItem');

                       // If empty, all items show
                       if (!searchString) {
                               for (var i = 0; i < studentItem.length; i++) {
                                   studentItems[i].style.display = "block";
                           }
                           return;
                       }

                       //Checks for matching terms, disappears the student from view if there is no match
                           for (var i = 0; i < studentItems.length; i++) {
                           var studentItem = studentItems[i];
                               var studentName = $(studentItem).find('.studentName').text();
                               console.log(studentName);


                               if (studentName.toLowerCase().includes(searchString.toLowerCase())) {
                               studentItem.style.display = "block";
                           } else {
                               studentItem.style.display = "none";
                           }
                       }
                   }

        </script>
</head>

<body>

    <!-- Web header -->
    <nav class="navbar">
        <h3 class="webTitle ms-4">School System</h3>
    </nav>

    <!-- Search bar -->
    <form class="container col-lg-6 col-sm-12 mb-4 ">
        <h2 class="text-center"> All Students</h2>
        <input class="form-control" type="search" placeholder="Search for a student" aria-label="Search"
               onkeyup="searchFunction(this.value)" oninput="searchFunction(this.value)">
    </form>

    @foreach (var student in Model.Students)
    {
        var accordionId = $"accordion-{student.studentId}";
        var collapseId = $"collapse-{student.studentId}";
        var risk = Model.StudentRisks.FirstOrDefault(risk => risk.studentId == student.studentId);

        <div class="container card col-lg-6 col-sm-12 shadow-sm mt-3 mb-3 p-0 studentItem">
            <div class="card-header d-flex justify-content-between align-items-center ">
                <div>@risk.attendanceAvg%</div>
                <div>@risk.riskStatus</div>
            </div> 
            <div class="card-body  d-flex align-items-start justify-content-around">
                <h5 class="card-title studentName ">@student.studentFirstName @student.studentLastName</h5>
                <button type="button" class=" btn btn-primary themeBtn" onclick="window.location.href='/students/@student.studentId/attendance'">View attendance</button>
            </div>
           
            <div class="container-fluid p-0 ">
                <div class="accordion " id="@accordionId">
                    <div class="accordion-item  " style="width:50%; text-align:left;">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="true" onclick="changeText(this)">
                            Courses
                            </button>
                        </h2>

                        <div id="@collapseId" class="accordion-collapse collapse" data-bs-parent="#@accordionId">
                            <div class="accordion-body">
                            @foreach (var course in @student.courses){
                                <p>@course.courseName</p>
                            }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
  }

<script>
    function changeText(currentObject){
        currentObject.textContent=currentObject.classList.contains('collapsed') 
        ? "See Courses"
        : "Hide Courses"
    }

</script>
</body>

</html>